<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/purple_accent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="textStartPadding">12dp</item>
        <item name="textEndPadding">12dp</item>
    </style>


</resources>